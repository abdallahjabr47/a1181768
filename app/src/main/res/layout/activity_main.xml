<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >


    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#DD0F4A78"
        android:gravity="center"
        android:text="Sport App"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="15pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMsg2"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="#8FB4C5"
        android:gravity="center"
        android:text="On the next page, you can choose any team and then its information will appear to you"
        android:textColor="#DD0F4A78"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/txtMsg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:shadowColor="#302E2E"
        android:text="Enter your name:"
        android:textColor="#DD0F4A78"
        android:textSize="8pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white"
        android:hint=" ....."
        android:minHeight="48dp" />

    <Button
        android:id="@+id/goBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#DD0F4A78"
        android:onClick="onClickSend"
        android:text="Submit" />


    <ImageView
        android:id="@+id/simpleImageViewLion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/palestine" />

</LinearLayout>